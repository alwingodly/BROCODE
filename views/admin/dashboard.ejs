                        <h4 class="card-title">RECENT ORDERS</h4>
                        <div class="table-responsive">
                          <table class="table mr-5 py-5" id="myTable">
                            <thead>
                              <tr>
                                <th class="text-light">Order No</th>
                                <th class="text-light">Order date</th>
                                <th class="text-light">Name</th>
                                <th class="text-light">Amount</th>
                                <th class="text-light">Product Id</th>
                                <th class="text-light">Payment method</th>
                                <th class="text-light">order status</th>
                                
                               
                              </tr>
                            </thead>
                            <tbody>
                             <% let limit = order.reverse().splice(0,10) %>
                              <% limit.forEach(function(order, index) { %>
                                <% for (let i = 0; i < Math.min(order.products.length, 10); i++) { %>
                                  <% const product = order.products[i]; %>
                                  <tr>
                                    <td>
                                      <%= order._id %>
                                    </td>
                                    <td>
                                      <%= new Date(order.createdAt).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour12: true }) %>
                                    </td>
                                    <td>
                                      <%= order.deliveryDetails.userName %>
                                    </td>
                                    <td>
                                      $<%= product.price %>
                                    </td>
                                    <td>
                                      <%= product.prodId %>  
                                    </td>
                                    <td>
                                      <%= order.paymentMethod %>
                                    </td>
                                    <td>
                                      <% if (product.orderstatus) { %>
                                        <% if (product.orderstatus === 'cancelled') { %>
                                          <span style="color: red;"><%= product.orderstatus %></span>
                                        <% } else if (product.orderstatus === 'returned') { %>
                                          <span style="color: yellow;"><%= product.orderstatus %></span>
                                        <% } else { %>
                                          <%= product.orderstatus %>
                                        <% } %>
                                      <% } else { %>
                                        placed
                                      <% } %>
                                    </td>
                                  </tr>
                                <% } %>
                              <% }); %>
                            </tbody>
                            
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
