  }

  .coustom-table th {
    background-color: #f2f2f2;
    color: #333;
    font-weight: bold;
  }

  .coustom-table tbody tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  .coustom-table td.text-danger {
    color: #dc3545;
  }
</style>
