  <div class="main-panel">
    <div class="container-wrapper">
      <div class="row ">
        <div class="col-12 grid-margin">
          <div class="card">
            <div class="card-body">
              <div class="row mb-3">
                <div class="col-md-6">
                </div>
                <div class="col-md-6 text-md-right">
                  <a href="product/add-product">
                    <button class="btn-rounded btn-info">ADD PRODUCT</button>
                  </a>
                  <a href="product/add-category">
                    <button class="btn-rounded  btn-info">ADD CATEGORIES</button>
                  </a>
                  <a href="product/add-subcategory">
                    <button class="btn-rounded  btn-info mr-3">ADD SUB CATEGORIES</button>
                  </a>
                </div>
              </div>
              <h4 class="card-title">PRODUCT</h4>
              <div class="table-responsive">
                <table class="table" id="myTable">
                  <thead>
                    <tr>
                      <th class="text-light">Product Image</th>
                      <th class="text-light">Product Name</th>
                      <th class="text-light">Category</th>
                      <th class="text-light">Sub Category</th>
                      <th class="text-light">Price</th>
                      <th class="text-light">Stock</th>
                      <th class="text-light">Status</th>
                      <th class="text-light text-center pl-5">block/unblock</th>
                      <th class="text-light text-center pl-5">Edit</th>
                      <th class="text-light text-center pl-5">Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% products.reverse().forEach((product)=> {
                      if (product.category && product.subcategory) { %>
                      <tr>
                        <td>
                          <img src="/uploads/<%= product.image[0] %>" alt="image" />
                        </td>
                        <td>
                          <span class="pl-2">
                            <%=product.productName %>
                          </span>
                        </td>
                        <td>
                          <%= product.category.category %>
                        </td>
                        <td>
                          <%= product.subcategory.subCategory %>
                        </td>
                        <td>
                          <%= product.price %>
                        </td>
                        <td>
                          <%= product.stock %>
                        </td>
                        <td>
                          <%= product.stock===0 ? 'No' : 'Yes' %>
                        </td>
                        <td class="text-center">
                          <% if (product.isBlocked) { %>
                            <a href="/admin/unblock-product?productId=<%= product._id %>" class="tm-product-block-link">
                              <i class="fa-solid fa-lock tm-product-block-icon text-light"></i>
                            </a>
                            <% } else { %>
                              <a href="/admin/block-product?productId=<%= product._id %>" class="tm-product-block-link">
                                <i class="fa-solid fa-lock-open tm-product-block-icon text-light"></i>
                              </a>
                              <% } %>
                        </td>
                        <td>
                          <a href="/admin/admin-panel/product/edit-product?productId=<%= product._id %>">
                            <i class="fa-solid fa-pencil tm-product-edit-icon text-light"></i>
                          </a>
                        <td class="text-center">
                          <a href="/admin/delete-product?productId=<%= product._id %>" class="tm-product-delete-link"
                            onclick="return confirm('Do you want to delete this product?')">
                            <i class="fa-solid fa-trash-can tm-product-delete-icon"></i>
                          </a>
                        </td>
                      </tr>
                      <% } }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
