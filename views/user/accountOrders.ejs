<script>
  document.getElementById('cancelled-products-btn').addEventListener('click', function () {
    filterOrdersByStatus('cancelled');
  });

  function filterOrdersByStatus(status) {
    var orders = document.getElementsByClassName('card');

    for (var i = 0; i < orders.length; i++) {
      var order = orders[i];
      var orderStatus = order.querySelector('.text-danger');

      if (orderStatus && orderStatus.textContent.trim() === status) {
        order.style.display = 'block';
      } else {
        order.style.display = 'none';
      }
    }
  }
</script>

