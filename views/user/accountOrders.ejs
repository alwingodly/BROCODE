<script>
  function convertToPDF(invoiceData, callback) {
  
    const docDefinition = {
      content: [
      
        { text: `Invoice - Order ID: ${invoiceData.order._id}`, fontSize: 18, margin: [0, 0, 0, 20] },

        // Customer Details
        { text: `To: ${invoiceData.order.deliveryDetails.userName}`, fontSize: 12 },
        { text: invoiceData.order.deliveryDetails.house },
        { text: `${invoiceData.order.deliveryDetails.city}, ${invoiceData.order.deliveryDetails.state}` },
        { text: `Phone: ${invoiceData.order.deliveryDetails.number}` },

        // Invoice Details
        { text: `ID: ${invoiceData.order._id}`, margin: [100, 0, 0, 0] },
        { text: `Creation Date: ${invoiceData.order.createdAt}`, margin: [100, 0, 0, 0] },

        // Order Items
        { text: 'Order Items:', fontSize: 14, margin: [0, 20, 0, 0] },
        {
          style: 'table',
          table: {
            widths: ['auto', '*', 'auto', 'auto', 'auto'],
            body: [
              ['No.', 'Name', 'Quantity', 'Price', 'Total'],
              ...invoiceData.order.products.map((product, index) => [
                index + 1,
                product.name,
                product.quantity,
                `$${product.price.toFixed(2)}`,
                `$${(product.quantity * product.price).toFixed(2)}`
              ])
            ]
          }
        },

        // Total Amount
        {
          text: `Total Amount: $${invoiceData.order.totalAmount.toFixed(2)}`,
          fontSize: 14,
          margin: [0, 20, 0, 0]
        }
      ],
      styles: {
        table: {
          margin: [0, 10, 0, 0]
        }
      }
    };

   
    pdfMake.createPdf(docDefinition).getBlob(callback);
  }

  function downloadFile(fileData, fileName) {
   
    saveAs(fileData, fileName);
  }

  function downloadInvoice(orderId) {
    fetch(`/invoices?orderId=${orderId}`)
      .then(response => response.json())
      .then(data => {
        if (data.order && data.product) {
          convertToPDF(data, (pdfBlob) => {
            const fileName = `invoice_${data.order.orderId}.pdf`;
            downloadFile(pdfBlob, fileName);
          });
        } else {
          console.log('No invoice data found.');
        }
      })
      .catch(error => {
        console.error('Error fetching invoice data:', error);
      });
  }
</script>
