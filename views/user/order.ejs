<section class="ftco-section">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-body">
            <h3>Shipping Address</h3>
            <div class="address-box text-dark">
              <p style="font-weight: 400">
                <strong><%= address.type %></strong>
              </p>
              <p><strong><%= address.userName %></strong></p>
              <p><%= address.house %></p>
              <p><%= address.city %>, <%= address.zip %></p>
              <p>Number: <strong><%= address.number %></strong></p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <% cartItems.forEach(function(cartItem) { %> <%
        cartItem.products.forEach(function(product, index) { %>
        <div class="card float-right m-1 shadow" style="height: auto">
          <div class="row no-gutters">
            <div class="col-2">
              <img
                style="height: auto"
                src="/uploads/<%= product.image %>"
                alt="<%= product.productName %>"
                class="card-img"
              />
            </div>
            <div class="col-10">
              <div class="ml-2 mt-2">
                <h6 class="card-title" style="margin-bottom: 0">
                  <%= product.productName %>
                </h6>
                <p class="card-text" style="margin-bottom: 0">
                  <%= product.category %>
                </p>
                <p class="card-text" style="margin-bottom: 0">
                  <%= product.subcategory %>
                </p>
                <div class="quantity" style="margin-bottom: 0">
                  Qty: <span><%= product.count %></span>
                </div>
                <div class="total" style="margin-bottom: 0">
                  <% if(product.cartOffer === true) {%>
                  <strong>$<%= product.offerPrice * product.count %></strong>
                  <% }else{%>
                  <strong>$<%= product.price * product.count %></strong>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }) %> <% }) %>
      </div>
    </div>
    <!-- <div class="text-right">
      <button class="btn btn-primary mb-3">Add Wallet</button>
    </div> -->
    <div
      class="d-flex justify-content-between align-items-center mb-3 col-md-6 mt-5"
    >
      <button
        type="button"
        class="btn btn-primary col-md-5 m-1"
        data-toggle="modal"
        data-target="#addCouponModal"
      >
        Add Coupon
      </button>
      <div
        class="modal fade"
        id="addCouponModal"
        tabindex="-1"
        role="dialog"
        aria-labelledby="addCouponModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addCouponModalLabel">Add Coupon</h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <% cartItems.forEach(function(cartItem) { %>
            <div class="modal-body">
              <form id="couponForm" action="/checkCoupon" method="POST">
                <div class="form-group">
                  <label for="couponCode">Coupon Code</label>
                  <input
                    type="text"
                    class="form-control"
                    id="couponCode"
                    name="couponCode"
                    placeholder="Enter coupon code"
                    required
                  />
                  <input
                    type="hidden"
                    name="totalPrice"
                    value="<%= cartItem.totalprice %>"
                  />
                  <input
                    type="hidden"
                    name="address"
                    value="<%= address._id %>"
                  />
                </div>

                <button type="submit" class="btn btn-primary">
                  Apply Coupon
                </button>
              </form>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
      <% if(wallet) {%> 
        <% cartItems.forEach(function(cartItem) { %> 
          <%if(cartItem.totalprice > wallet.wallet) {%>
      <button
        type="button"
        class="btn btn-primary col-md-5 m-1"
        id="useWalletButton"
      >
        Use Wallet Amount
      </button>
      <% } %> 
      <% }) %> 
      <% } %>
    </div>
    <form id="checkout-form" action="#" method="POST">
      <div class="row mt-5 pt-3 d-flex">
        <div class="col-md-6">
          <div class="cart-detail cart-total p-3 p-md-4 bg-light shadow">
            <h3 class="billing-heading mb-4">Cart Total</h3>
            <% let subtotal = 0; %> 
            <% let manageTotal = 0; %> 
            <% cartItems.forEach(function(cartItem) { %>
            <% cartItem.products.forEach(function(product, index) { %> 
              <%subtotal = cartItem.totalprice; %> 
              <%manageTotal = cartItem.manageTotal; %>
            <% }) %> 
            
            <% let deliveryCharge = (subtotal < 100) ? 3 : 0; %>
            <p class="d-flex">
              <% if (cartItem.couponDiscount === 0) { %>
              <span>Subtotal</span>
              <% if (subtotal < 100) { %>
              <span id="total-quantity">$<%= subtotal - 3 %></span>
              <% } else { %>
              <span id="total-quantity">$<%= subtotal %></span>
              <% } %>
              <% } %>

              <% if (cartItem.couponDiscount!==0) { %>
              <span>Subtotal</span>
              <% if (subtotal < 100) { %>
              <span id="total-quantity">$<%= subtotal+cartItem.couponDiscount- 3 %></span>
              <% } else { %>
              <span id="total-quantity">$<%= subtotal+cartItem.couponDiscount %></span>
              <% } %>
              <% } %>
            </p>
            <p class="d-flex">
              <span>Delivery</span>
              <span id="delivery-charge">$<%= deliveryCharge %></span>
            </p>
            <p class="d-flex">
              <span>Discount</span>
             
              <span>$ <%=cartItem.couponDiscount %></span>
              <% }) %> 
            </p>
            <hr />

            <% let totalPrice = subtotal %>
            <p class="d-flex total-price">
              <span>Total</span>
              <span id="total-price">$<%= totalPrice %></span>
              <input
                type="hidden"
                name="totalPrice"
                value="<%= totalPrice %>"
              />
              <input
                type="hidden"
                name="manageTotal"
                value="<%=  manageTotal %>"
              />
            </p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="cart-detail p-3 p-md-4 bg-light shadow">
            <h3 class="billing-heading mb-4">Payment Method</h3>

            <div class="form-group">
              <div class="col-md-12">
                <div class="radio">
                  <label>
                    <input
                      type="radio"
                      name="paymentMethod"
                      value="COD"
                      class="mr-2"
                      required
                    />
                    COD
                  </label>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12">
                <div class="radio">
                  <label>
                    <input
                      type="radio"
                      name="paymentMethod"
                      value="Razorpay"
                      class="mr-2"
                      required
                    />
                    Razorpay
                  </label>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12">
                <div class="radio">
                  <% if(wallet) {%>
                  <label>
                    <% if (wallet.wallet === 0 || wallet.wallet < totalPrice) {
                    %>
                    <input
                      type="radio"
                      name="paymentMethod"
                      value="Wallet"
                      class="mr-2"
                      disabled
                      required
                    />if
                    Wallet ($ <%= wallet.wallet %>) - Insufficient balance 
                    <% }else { %>
                    <input
                      type="radio"
                      name="paymentMethod"
                      value="Wallet"
                      class="mr-2"
                      required
                    />
                    <% cartItems.forEach(function(cartItem) { %>
                     <% if(cartItem.walletAmount === true){ %>
                      <span> ($ 0)- balance </span>
                      <% }else { %>
                        Wallet ($ <%= wallet.wallet %>) 
                        <% } %>
                     <% }) %>
                     <% } %>
                  </label>
                  <%}else{ %>
                  <input
                    type="radio"
                    name="paymentMethod"
                    value="Wallet"
                    class="mr-2"
                    disabled
                    required
                  />
                  Wallet- Insufficient balance <% } %>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12">
                <div class="checkbox">
                  <label>
                    <input type="checkbox" name="termsAndConditions" required />
                    I agree to the terms and conditions
                  </label>
                </div>
              </div>
            </div>
            <input type="hidden" name="addressId" value="<%= address._id %>" />
            <button
              id="orderButton"
              type="submit"
              class="btn btn-primary py-3 px-4"
            >
              Place an order
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>

  <!-- Payment Success Modal -->
  <div
    class="modal fade"
    id="paymentSuccessModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="paymentSuccessModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="paymentSuccessModalLabel">
            Payment Successful
          </h5>
          
        </div>
        <div class="modal-body">
          <img
            style="height: 400px; width: 450px"
            src="/image/3d-illustration-of-payment-success-png.webp"
            alt="Payment Success Image"
          />
          <p>Your payment was successful. Thank you for your purchase!</p>
        </div>
        <div class="modal-footer">
          <a href="/" class="btn btn-primary">Go to Home Page</a>
          <a href="/accountOrders" class="btn btn-secondary">Go to Order Page</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Payment Failed Modal -->
  <div
    class="modal fade"
    id="paymentFailedModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="paymentFailedModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="paymentFailedModalLabel">
            Payment Failed
          </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <img style="height: 400px; width: 400px;" src="/image/fail.png" alt="Payment Failed Image">
          <p>Your payment was not successful. Please try again.</p>
        </div>
        <div class="modal-footer">
          <a href="/" class="btn btn-primary">Go to Home Page</a>
          <a href="/accountOrders" class="btn btn-secondary">Go to Order Page</a>
        </div>
      </div>
    </div>
  </div>
</section>

